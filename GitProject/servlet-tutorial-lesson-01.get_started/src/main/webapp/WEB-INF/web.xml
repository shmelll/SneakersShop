<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>GetStartPageServlet</servlet-name>
        <servlet-class>ru.javavision.servlet.GetIndexPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetStartPageServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthenticationFilter</servlet-name>
        <servlet-class>ru.javavision.servlet.AuthenticationFilter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationFilter</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Main</servlet-name>
        <jsp-file>/WEB-INF/view/main.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authorization</servlet-name>
        <jsp-file>/WEB-INF/view/authorization.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>ru.javavision.servlet.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationForm</servlet-name>
        <jsp-file>/WEB-INF/view/registration.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationForm</servlet-name>
        <url-pattern>/registrationForm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckAuthorized</servlet-name>
        <servlet-class>ru.javavision.servlet.CheckAuthorizedServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckAuthorized</servlet-name>
        <url-pattern>/checkAuthorized</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddToCart</servlet-name>
        <servlet-class>ru.javavision.servlet.CartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToCart</servlet-name>
        <url-pattern>/AddToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>ru.javavision.servlet.CheckoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cart</servlet-name>
        <jsp-file>/WEB-INF/view/cart.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RemoveProduct</servlet-name>
        <servlet-class>ru.javavision.servlet.RemoveProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveProduct</servlet-name>
        <url-pattern>/RemoveProduct</url-pattern>
    </servlet-mapping>










</web-app>